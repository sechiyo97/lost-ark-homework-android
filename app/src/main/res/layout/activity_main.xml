<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.queserasera.lostarkhomework.main.MainViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.MainActivity"
        android:padding="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ark_character_list"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/ark_character_list"
            app:layout_constraintBottom_toBottomOf="@id/ark_character_list"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:onClick="@{viewModel::onArrowUpClicked}"
                android:id="@+id/ark_arrow_up"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="50dp"
                android:src="@drawable/arrow_up"
                app:layout_constraintBottom_toTopOf="@id/ark_arrow_down"/>
            <ImageView
                android:onClick="@{viewModel::onArrowDownClicked}"
                android:id="@+id/ark_arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:src="@drawable/arrow_down"
                app:layout_constraintTop_toBottomOf="@id/ark_arrow_up"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/ark_character_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="20dp">
            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/button_background_dark_gray"
                android:onClick="@{viewModel::onHomeworkButtonClicked}"
                android:id="@+id/ark_homework_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/check_homework"
                android:layout_marginEnd="5dp"/>
            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:background="@drawable/button_background_dark_gray"
                android:onClick="@{viewModel::onMariButtonClicked}"
                android:id="@+id/ark_mari_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/ark_homework_button"
                android:text="@string/mari_shop"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ark_ad_view_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center|bottom"
            ads:adSize="LARGE_BANNER"
            ads:adUnitId="ca-app-pub-6823524961524860/8347769866"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintEnd_toEndOf="parent" >
        </com.google.android.gms.ads.AdView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
