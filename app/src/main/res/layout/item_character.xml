<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="name"
            type="String" />
        <variable
            name="level"
            type="int" />
        <variable
            name="isSelected"
            type="boolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <View
            android:alpha="@{isSelected == true? 1f : 0.3f}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_border"/>
        <ImageView
            android:alpha="@{isSelected == true? 1f : 0.3f}"
            android:id="@+id/ark_character_image"
            android:src="@drawable/reload_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:alpha="@{isSelected == true? 1f : 0.3f}"
            android:id="@+id/ark_character_name"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:text="@{`lv.` + Integer.toString(level)}"
            app:layout_constraintStart_toEndOf="@id/ark_character_image"
            app:layout_constraintBottom_toTopOf="@id/ark_character_level"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:alpha="@{isSelected == true? 1f : 0.3f}"
            android:id="@+id/ark_character_level"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@{name}"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/ark_character_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ark_character_name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>